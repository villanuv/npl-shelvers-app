<%= render 'menu' %>

<div class="container">
	<div class="row">
		<div class="float-left">
			<h1>All Carts</h1>
		</div>
		<div class="ml-auto"><h2><a href=""><i class="fas fa-cart-arrow-down"></i></a></h2></div>
	</div>
	<div class="row">
		<table border="1">
			<tr>
				<th>ID</th>
				<th>Cart Name <a href=""><i class="fas fa-cart-plus"></i></a></th>
				<th>Book Collection</th>
				<th>Status</th>
				<th>Check In Start</th>
				<th>Check In End</th>
				<th>Sorted By</th>
				<th>Shelving Start</th>
				<th>Shelving End</th>
				<th>Current Shelver</th>
				<th>Time to Fill Cart</th>
				<th>Fill to Shelf</th>
				<th></th>
			</tr>
			<% @carts.each do |cart| %><tr>
				<% contents = cart.cart_contents.last %>
				<td><%= cart.id %></td>
				<td><%= link_to cart.name, cart %></td>
				<td><%= contents.book_collection %></td>
				<td>&nbsp;</td>
				<td><%= contents.check_in_start.strftime("%m/%d/%y, %-l:%M %p") %></td>
				<td><% if contents.check_in_end != nil %><%= contents.check_in_end.strftime("%m/%d/%y, %-l:%M %p") %><% end %></td>
				<td>&nbsp;</td>
				<td><%= contents.shelving_start %></td>
				<td><%= contents.shelving_end %></td>
				<td><%= contents.shelver_starter.first_name %> <%= contents.shelver_starter.last_name %></td>
				<td></td>
				<td></td>
				<td class="edit-icon"><%= link_to '<i class="fas fa-info-circle"></i>'.html_safe, cart %></td>
			</tr><% end %>
		</table>

